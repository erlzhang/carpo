.mt-4
  .card.border-light.text-center.mb-3.shadow.author-card
    .card-body
      - if @author = @author || current_user.author
        .mb-2
          = get_avatar(@author)
        %h4.card-title= @author.name
        %p.text-muted.card-text= @author.introduction
        .row
          .col
            .lead.text-primary
              %strong= author_count(@author)[:book]
            %p.mb-0
              %small.text-muted Books
          .col
            .lead.text-primary
              %strong= author_count(@author)[:post]
            %p.mb-0
              %small.text-muted Posts
